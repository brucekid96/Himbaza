            android:drawableLeft="@drawable/ic_list_mauvai_24dp"
            android:drawablePadding="10dp"
            android:text="Title_cantique"
            android:textColor="#BE0B0A0A"
            android:textSize="16sp"
            android:textStyle="bold" />
        </LinearLayout>